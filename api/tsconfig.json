{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022"],
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "outDir": "./dist",
    "rootDir": "./",
    "types": ["node"],
    "declaration": true,
    "sourceMap": true
  },
  "ts-node": {
    "esm": false,
    "compilerOptions": {
      "module": "commonjs",
      "target": "ES2022"
    }
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
